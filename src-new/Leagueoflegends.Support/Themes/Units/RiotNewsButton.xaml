<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:Leagueoflegends.Support.UI.Units">

    <LinearGradientBrush x:Key="RiotNewsButtonHoverBorderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFFFFE2" Offset="0"/>
        <GradientStop Color="#FFDC9F27" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type units:RiotNewsButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:RiotNewsButton}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border
                            x:Name="BorderBrush"
                            Grid.Row="0"
                            Background="#0B131B"
                            BorderBrush="#28282B"
                            BorderThickness="1">
                            <Border VerticalAlignment="Top">
                                <Image
                                    x:Name="Image"
                                    Source="{TemplateBinding ImageSource}"
                                    Stretch="Fill"
                                    Height="{TemplateBinding ImageHeight}"
                                    Opacity="0.9"/>
                            </Border>
                        </Border>
                        <TextBlock
                            Grid.Row="1" 
                            Text="{TemplateBinding Text}" 
                            Foreground="#cdbe91" 
                            TextWrapping="Wrap"
                            FontSize="12" 
                            FontWeight="Bold" 
                            Margin="4,8,4,4"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderBrush" Property="BorderBrush" Value="{StaticResource RiotNewsButtonHoverBorderBrush}" />
                            <Setter TargetName="Image" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="BorderBrush" Property="BorderBrush" Value="{StaticResource RiotNewsButtonHoverBorderBrush}" />
                            <Setter TargetName="Image" Property="Opacity" Value="0.8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>