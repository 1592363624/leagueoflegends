<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:Leagueoflegends.Support.UI.Units">

    <Style TargetType="{x:Type units:RiotUserDisplayStatus}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:RiotUserDisplayStatus}">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="PART_UserName" 
                                       Text="{TemplateBinding UserName}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#F0E6D2"
                                       Margin="0,0,0,0"/>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="PART_StatusIndicator" 
                                         Width="11" Height="11" 
                                         Stroke="#66F8A0" 
                                         StrokeThickness="2"
                                         Fill="#09A646" 
                                         Margin="0,0,6,0"/>
                                <TextBlock x:Name="PART_StatusText" 
                                           Text="Online"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="#099441"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsOnline" Value="False">
                            <Setter TargetName="PART_StatusIndicator" Property="Fill" Value="Transparent"/>
                            <Setter TargetName="PART_StatusIndicator" Property="Stroke" Value="#9C3213"/>
                            <Setter TargetName="PART_StatusText" Property="Text" Value="자리 비움"/>
                            <Setter TargetName="PART_StatusText" Property="Foreground" Value="#A09B8C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>