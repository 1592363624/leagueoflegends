<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvts="clr-namespace:Leagueoflegends.Support.Local.Converters"
    xmlns:units="clr-namespace:Leagueoflegends.Support.UI.Units">

    <cnvts:UserToThumbnailConverter x:Key="UserToThumbnailConverter"/>

    <LinearGradientBrush x:Key="DefaultAvatarBorderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#B79349" Offset="0"/>
        <GradientStop Color="#957230" Offset="0.5"/>
        <GradientStop Color="#6C5228" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverAvatarBorderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#E9DFCB" Offset="0"/>
        <GradientStop Color="#D9BD81" Offset="0.5"/>
        <GradientStop Color="#C99D3F" Offset="1"/>
    </LinearGradientBrush>

    <Style x:Key="CircleFaceStyle" TargetType="{x:Type Control}">
        <Setter Property="BorderBrush" Value="{StaticResource DefaultAvatarBorderBrush}"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Control}">
                    <Grid>
                        <Ellipse Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2" Fill="Transparent"/>
                        <Ellipse Margin="3" Stroke="#000000" StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding Seq, Converter={StaticResource UserToThumbnailConverter}}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type units:RiotFriendItemControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:RiotFriendItemControl}">
                    <Grid Background="{TemplateBinding Background}">
                        <Rectangle x:Name="OverlayRectangle" Fill="#11FFFFFF" Opacity="0"/>
                        <Grid Margin="10,5,10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Control x:Name="Avatar" Style="{StaticResource CircleFaceStyle}" Margin="0,0,2,0"/>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock x:Name="NameText" Text="{Binding Name}" Foreground="#A09B8C" FontSize="13"/>
                                <TextBlock x:Name="StatusText" Text="{Binding Status}" Foreground="#FF5B5A56" FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OverlayRectangle" Property="Opacity" Value="1"/>
                            <Setter TargetName="NameText" Property="Foreground" Value="#F0E6D2"/>
                            <Setter TargetName="StatusText" Property="Foreground" Value="#FFA09B8C"/>
                            <Setter TargetName="Avatar" Property="BorderBrush" Value="{StaticResource HoverAvatarBorderBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>